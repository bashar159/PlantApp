<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/box_2"
    >

    <TextView
        android:id="@+id/S0788"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Your helper in his way to you"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/TickImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/S0788"
        android:layout_centerHorizontal="true"
        android:src="@drawable/settings" />


    <TextView
        android:id="@+id/DoneNAmeTExt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TickImage"
        android:layout_centerHorizontal="true"
        android:text="Mohammad Ali Hosam"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/DoneEXPType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/DoneNAmeTExt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="car mechanic"
        android:textColor="@color/quantum_yellow"
        android:textSize="22sp"
        android:textStyle="bold"
        />

    <RatingBar
        android:id="@+id/DoneRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/DoneEXPType"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:numStars="5"
        android:stepSize="0.5"/>

    <Button
        android:id="@+id/DoneButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@id/DoneRatingBar"
        android:layout_centerHorizontal="true"
        android:src="@drawable/contact"
        android:text="DONE"
        android:textColor="@color/white"
        android:background="@color/PAGE"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        />


</RelativeLayout>